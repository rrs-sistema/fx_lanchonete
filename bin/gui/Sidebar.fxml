<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" 
      style="-fx-background-color: #2c3e50; -fx-padding: 10;" spacing="15" prefWidth="220" fx:controller="application.MainController">
    
    <!-- Título do Menu -->
    <Label text="Menu" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"/>

    <!-- Item de Menu com Indicador -->
<Button onAction="#handleCadastroCliente" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-font-size: 16px; -fx-cursor: hand;">
    <graphic>
        <HBox spacing="10">
            <Label text="📍" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
            <Label text="Clientes" style="-fx-text-fill: white;"/>
            <Label text="1" style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 3 5; -fx-background-radius: 10;"/>
        </HBox>
    </graphic>
</Button>


    <Button onAction="#handleCadastroProduto" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: LEFT; -fx-font-size: 16px; -fx-cursor: hand;">
        <graphic>
            <HBox spacing="10">
                <Label text="📱" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
                <Label text="App Menu" style="-fx-text-fill: white;"/>
                <Label text="2" style="-fx-background-color: yellow; -fx-text-fill: black; -fx-font-size: 12px; -fx-padding: 3 5; -fx-background-radius: 10;"/>
            </HBox>
        </graphic>
    </Button>

    <Button onAction="#handlePdv" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: LEFT; -fx-font-size: 16px; -fx-cursor: hand;">
        <graphic>
            <HBox spacing="10">
                <Label text="📅" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
                <Label text="Event" style="-fx-text-fill: white;"/>
                <Label text="6" style="-fx-background-color: green; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 3 5; -fx-background-radius: 10;"/>
            </HBox>
        </graphic>
    </Button>
    
</VBox>
